<resources>

    <!-- Height of the status bar in portrait. The height should be
         Max((status bar content height + waterfall top size), top cutout size) -->
    <dimen name="status_bar_height">49.0px</dimen>

    <!-- for 20dp of padding at 3.5px/dp at default density -->
    <dimen name="rounded_corner_content_padding">33.0px</dimen>

    <!-- Radius of the software rounded corners bottom. -->
    <dimen name="rounded_corner_radius_bottom">68.0px</dimen>

    <!-- Radius of the software rounded corners top. -->
    <dimen name="rounded_corner_radius_top">68.0px</dimen>

    <!-- Adjustment for software rounded corners since corners aren't perfectly round. -->
    <dimen name="rounded_corner_radius_adjustment">6px</dimen>

</resources>
